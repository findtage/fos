{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "types": ["node"]
    },
    "include": [
        "server/**/*",
        "prisma/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "client"
    ]
}
